#header
  margin: 0 auto 2rem
  width: 100%

  h1
    margin-top: 0
    margin-bottom: 0
    color: $color-text
    letter-spacing: .01em
    font-weight: 700
    font-style: normal
    font-size: 1.5rem
    line-height: 2rem

    antialias()

  a
    background: none
    color: inherit
    text-decoration: none

  #logo
    display: inline-block
    float: left
    margin-right: 20px
    width: $logo-width
    height: $logo-height
    border-radius: 5px
    filter: grayscale(100%)
    background-size: $logo-width $logo-height
    background-repeat: no-repeat
    -webkit-filter: grayscale(100%)

  #title
    display: inline-block
    h1
      display: inline-block

  #nav
    color: $color-accent-1
    letter-spacing: .01em
    font-weight: normal
    font-style: normal
    font-size: .8rem

    ul
      margin: 0
      padding: 0
      list-style-type: none
      line-height: 20px

      a
        color: $color-accent-1

      li
        display: inline-block
        vertical-align: middle

      li:not(:last-child):after
        content: "|"
        margin: 0 12px

      .icon
        display: none

#header:hover
  #logo
    filter: none
    -webkit-filter: none

